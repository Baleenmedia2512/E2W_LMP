{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["sin1"],
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "SKIP_ENV_VALIDATION": "0",
      "PRISMA_GENERATE_SKIP_AUTOINSTALL": "false",
      "PRISMA_CLI_BINARY_TARGETS": "rhel-openssl-3.0.x"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 10
    },
    "app/api/webhooks/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/check-overdue-followups",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/check-upcoming-followups",
      "schedule": "0 12 * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/webhooks/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex"
        }
      ]
    }
  ]
}
